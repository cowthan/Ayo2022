<?xml version="1.0" encoding="utf-8"?>
<com.dongqiudi.news.view.ExpressionEmptyView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rich_gray"
    android:gravity="center"
    android:orientation="vertical">

    <org.ayo.editor.progress.ProgressImageView
        android:id="@+id/empty_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:src="@drawable/loading_footer"
        android:visibility="gone" />

    <TextView
        android:id="@+id/empty_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_load_expressions"
        android:textColor="@color/rich_gray4f" />

    <Button
        android:id="@+id/resume_btn"
        android:background="@drawable/blue_stroke_btn"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="@string/rich_refresh_again"
        android:textColor="@drawable/text_blue_white" />

</com.dongqiudi.news.view.ExpressionEmptyView>