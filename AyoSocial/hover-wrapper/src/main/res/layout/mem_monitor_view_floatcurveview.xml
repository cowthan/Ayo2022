<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mem_monitor_aa000000"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <org.ayo.appsist.monitor.CurveChartView
        android:id="@+id/mem_monitor_view_floatcurveview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mem_monitor_view_namevalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/mem_monitor_text_padding"
        android:textColor="@color/mem_monitor_00f0af"
        android:textSize="13sp"/>

</RelativeLayout>
