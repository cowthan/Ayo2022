<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color2"
    android:orientation="vertical">

    <org.ayo.view.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/titlebar_layout"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@+id/titlebar_layout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvTrace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:overScrollMode="never" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_cancle_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_green_border_white_bg"
            android:text="@string/after_sale_cancel"
            android:textColor="@color/title"
            android:layout_marginRight="12dp"
            />

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_green_border_white_bg"
            android:text="@string/after_sale_edit"
            android:textColor="@color/title"
            android:layout_marginRight="12dp"
            />

    </LinearLayout>
</LinearLayout>
