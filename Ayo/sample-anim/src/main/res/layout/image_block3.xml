<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView android:id="@+id/woot"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/woot"
        android:onClick="clicked"
        android:transitionName="woot"
        />
    <ImageView android:id="@+id/aa"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/woot"
        android:onClick="clicked"
        android:transitionName="aa"
        />
    <ImageView android:id="@+id/ducky"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:scaleType="centerCrop"
               android:src="@drawable/ducky"
               android:onClick="clicked"
               android:transitionName="share_img"
            />

</LinearLayout>
    <Button
        android:id="@+id/btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:text="哈哈哈"
        android:transitionName="share_btn"
        android:gravity="center"
        />
    </LinearLayout>