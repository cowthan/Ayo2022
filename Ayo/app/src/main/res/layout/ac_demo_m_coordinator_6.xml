                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="CoordinatorLayout"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="CoordinatorLayout"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="CoordinatorLayout"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="CoordinatorLayout"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="CoordinatorLayout"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />
            <Button
